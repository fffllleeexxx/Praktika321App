<Window x:Class="Praktika321App.EditFacultyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktika321App"
        mc:Ignorable="d"
        Title="EditFacultyWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Abbreviation"/>
            <TextBox x:Name="AbbreviationTextBox" IsReadOnly="True"/>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameTextBox"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
